<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/docs/api/org/apache/log4j/xml/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="FileLog" class="org.apache.log4j.FileAppender">
		<param name="file" value="/program files/inetvod/logs/widgetserver/widgetserver.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}|%p|%c{2}.%m%n" />
		</layout>
	</appender>
	<category name="com.inetvod">
		<level value="debug"/>
		<appender-ref ref="FileLog"/>
	</category>
	<category name="org.apache">
		<level value="info"/>
		<appender-ref ref="FileLog"/>
	</category>
</log4j:configuration>